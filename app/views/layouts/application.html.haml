!!! 5
%html{:lang => "en"}
  %head
    %title= header_title.html_safe
    = stylesheet_link_tag    "application"
    /[if IE 6]
      = stylesheet_link_tag 'ie6'
    /[if IE 7]
      = stylesheet_link_tag 'ie7'
    %link{ :rel => "stylesheet", :href => "http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css"}
    = javascript_include_tag "application"
    = csrf_meta_tags

    -# Google Analytics
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-26832205-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

%body.content{ :id => "#{params[:controller]}_#{params[:action]}".idify, :class => "http-#{response.status} #{params[:controller].idify}_pages" }
  #container{:class => "container row"}
    #column{:class => "span8 offset4"}
      %header
      = yield

      %footer
        %header
        %p
          %span.copyright
            Copyright 2011 Little Viking Games.
            %br
            Background texture from
            = link_to 'subtlepatterns.com', 'http://subtlepatterns.com'
          %span.contact= mail_to "info@littlevikinggames.com"

      = yield :body_end

